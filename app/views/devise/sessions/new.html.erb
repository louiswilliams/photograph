<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
<div class="col-md-3">

  <div class="form-group"><%= f.label :login %><br />
  <%= f.text_field :login, :autofocus => true, :class => "form-control" %></div>

  <div class="form-group"><%= f.label :password %><br />
  <%= f.password_field :password, :class => "form-control" %></div>

  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>

  <div><%= f.submit "Sign in", :class => "btn btn-primary" %></div>
</div>
<% end %>

<%= render "devise/shared/links" %>
