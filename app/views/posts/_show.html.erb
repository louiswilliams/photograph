<div class="row">
<div class="col-md-12">
    <div class="row">
    <div class="col-md-3" style="margin-top: 20px">
        <% likes = @post.likes.count %>
        <% liked = (Like.find_by_user_id_and_post_id(current_user.id, @post.id)) %>
        <%= link_to raw("#{likes} <span class='glyphicon glyphicon-star'></span>"),
            post_like_path(@post), :method => :post,
            :class => "btn btn-default btn-md #{(liked) ? 'active' : ''}" %>
    </div>
    <div class="col-md-6" >
        <h2><%= @post.caption %> <small><%= @post.user.name %></small></h2>
    </div>
    </div>
    <%= link_to image_tag(@post.image.url(:large)),post_path(@post),
        :class => "post"  %>
</div>
</div>