<h1>New image</h1>
<%= form_for @post, :html => { :multipart => true } do |f| %>
    <h3>Upload: </h3>
    <div class="form-group">
        <%= f.file_field :image, :class => "btn btn-default" %>
    </div>
    <div class="form-group">
        <%= f.label :caption, "Caption" %>
        <%= f.text_field :caption, :class => "form-control" %>
    </div>
    <div class="form-group">
        <%= f.submit "Post", :class => "btn btn-primary" %>
    </div>
<% end %>